---
import "@style";
import Header from "@components/header/Header.astro";
import SidebarNav from "@components/widgets/SidebarNav.astro";
import Footer from "@components/Footer.astro";

import { type HeaderNav } from "@components/widgets/SidebarNav.astro";

interface Props {
  page: string;
  headers?: HeaderNav[];
}

const { page, headers } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{page}</title>
  </head>

  <body>
    <div class="flex flex-col min-h-screen">
      <Header currentPage={page} />
      {headers && <SidebarNav headers={headers} />}
      <div class="flex-grow mt-32 mx-auto max-w-screen-md w-full px-8">
        <slot />
      </div>
      <Footer />
    </div>
  </body>
</html>
