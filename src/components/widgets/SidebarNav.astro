---
export interface HeaderNav {
  title: string;
  href: string;
  subheaders?: {
    title: string;
    href: string;
    subheaders?: {
      title: string;
      href: string;
    }[];
  }[];
}

interface Props {
  headers: HeaderNav[];
}

const { headers } = Astro.props;
---

<div class="fixed top-1/5 left-1/2 ml-[-38rem] z-40 hidden xl:block">
  <div class="text-xl font-bold">Sections</div>
  <nav class="flex flex-col pb-2 pt-1 border-t-2 border-b-2 w-[14rem]">
    {
      headers.map((header) => (
        <div class="flex flex-col">
          <a
            href={header.href}
            class="!no-underline hover:!underline sidenav-theme"
          >
            > {header.title}
          </a>
          {header.subheaders && (
            <div class="flex flex-col ml-1 pl-3 border-l-1">
              {header.subheaders.map((subheader) => (
                <div class="flex flex-col">
                  <a
                    href={subheader.href}
                    class="!no-underline hover:!underline sidenav-theme"
                  >
                    > {subheader.title}
                  </a>
                  <div class="flex flex-col ml-1 pl-3 border-l-1">
                    {subheader.subheaders &&
                      subheader.subheaders.map((subsubheader) => (
                        <a
                          href={subsubheader.href}
                          class="!no-underline hover:!underline sidenav-theme"
                        >
                          > {subsubheader.title}
                        </a>
                      ))}
                  </div>
                </div>
              ))}
            </div>
          )}
        </div>
      ))
    }
  </nav>
</div>

<script is:inline type="module">
  // doesn't work when section is larger than display view:
  // https://github.com/w3c/IntersectionObserver/issues/124
  const observer = new IntersectionObserver(
    (entries) => {
      entries.forEach((entry) => {
        const id = entry.target.id;
        const anchor = document.querySelector(`nav a[href="#${id}"]`);
        if (!anchor) return;

        if (entry.isIntersecting) {
          anchor.classList.add("font-bold", "current-highlight");
        } else {
          anchor.classList.remove("font-bold", "current-highlight");
        }
      });
    },
    {
      threshold: 0.5,
    },
  );

  document
    .querySelectorAll("section[id]")
    .forEach((section) => observer.observe(section));
</script>
