---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

export interface BlogData {
  href: string;
  title: string;
  date: string;
  description: {
    main: string;
    extra: string[];
  };
  thumbnail: ImageMetadata;
  alt: string;
}

interface Props {
  blog: BlogData;
}
const { blog } = Astro.props;
---

<div
  class="flex flex-col gap-1 md:h-[200px] overflow-hidden tile tile-theme a-button"
>
  <a
    href={blog.href}
    class="no-underline hover:no-underline text-[var(--cinnamon)] dark:text-[var(--goldenrod)]"
  >
    <div class="fs-xl-lg font-bold border-b-1">
      {blog.title}
    </div>
    <span
      class="text-[var(--baltic-sea)] dark:text-[var(--romance)] !font-medium"
    >
      <div class="fs-base-sm italic">Updated: {blog.date}</div>
      {blog.description && <div class="text-base">{blog.description.main}</div>}
      <div class="flex flex-col sm:flex-row gap-2 items-center sm:items-start">
        <Image
          class="!my-1 w-[144px] sm:w-[192px]"
          src={blog.thumbnail}
          alt={blog.alt}
          width={192}
          height={192}
        />
        {
          blog.description && (
            <div class="flex flex-col fs-base-sm gap-2">
              {blog.description.extra.map((desc) => (
                <>{desc}</>
              ))}
            </div>
          )
        }
      </div>
    </span>
  </a>
</div>
