---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

import "@style";
import { data } from "@content/about/experience";

const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/companies/*.png",
);
---

<section>
  <h1 id="experience">Experience</h1>
  <div class="flex flex-col gap-4">
    {
      data.map((company) => (
        <section class="flex tile tile-theme">
          <Image
            class="!my-0 size-fit"
            src={images[`/src/assets/companies/${company.logo}`]()}
            alt={company.name}
            width={60}
            height={60}
          />
          <div class="flex sm:flex-row flex-col flex-1 justify-between ml-4">
            <div class="flex flex-col">
              <a class="a-hover-bul" href={company.link} target="_blank">
                {company.name}
              </a>
              {company.position}
            </div>
            <div class="fs-base-sm italic">{company.time}</div>
          </div>
        </section>
      ))
    }
  </div>
</section>
