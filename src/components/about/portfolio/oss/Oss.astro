---
import "@style";
import OssSection from "./OssSection.astro";
import Accordion from "@components/widgets/Accordion.astro";
import { data, minor } from "@content/about/oss";
---

<section>
  <h2 id="open-source" class="ul-offset !mt-4">Open-Source</h2>
  <div class="flex flex-col">
    <div class="flex flex-col gap-8">
      {data.map((oss) => <OssSection oss={oss} />)}
    </div>

    <div class="fs-base-sm my-2 pb-2 pt-8">
      The repos listed above are the contributions I'm most proud of.
      <br />
      Here are some other minor contributions I've done as well! ðŸ˜‹
    </div>

    <Accordion>
      <div class="fs-lg-base" slot="title">Other contributions</div>
      <div class="pt-4" slot="contents">
        <div class="flex flex-col md:grid md:grid-cols-2 gap-8">
          {minor.map((oss) => <OssSection oss={oss} />)}
        </div>
      </div>
    </Accordion>
  </div>
</section>
