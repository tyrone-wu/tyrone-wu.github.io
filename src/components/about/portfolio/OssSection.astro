---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

import Accordion from "@components/widgets/Accordion.astro";
import type { OSS } from "@contents/about/oss.ts";

interface Props {
  oss: OSS;
}

const { oss } = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/thumbnails/*.png",
);
---

<section id={oss.id} class="tile tile-theme scroll-anchor-offset">
  <div class="flex flex-row items-end">
    <Image
      class="!my-0 size-fit"
      src={images[`/src/assets/thumbnails/${oss.thumbnail}`]()}
      alt={oss.name}
      width={48}
      height={48}
    />
    <div class="flex flex-col ml-4 h-full">
      <a class="a-hover-bul" href={oss.link} target="_blank">
        {oss.name}
      </a>
      {
        oss.org && (
          <a
            class="!no-underline hover:!underline fs-base-sm"
            href={oss.org.link}
            target="_blank"
          >
            {oss.org.name}
          </a>
        )
      }
    </div>
  </div>

  <div class="mt-2">{oss.description}</div>

  {
    ["Features", "Bug Fixes"].map(
      (subheader, i) =>
        oss.prs[i].length > 0 && (
          <section>
            <Accordion
              buttonClasses="w-full flex py-1 border-b-1 hover:underline hover:font-bold"
              iconClasses="size-7 mr-4 ml-auto"
              contentsClasses="pl-2 pt-2"
            >
              <div class="pl-4" slot="title">
                {subheader}
              </div>
              <ul class="text-base" slot="contents">
                {oss.prs[i].map((pr) => (
                  <li class="!pb-2">
                    <div class="flex">
                      {pr.id_links.map((id_link, i) => (
                        <>
                          {i > 0 && ","}
                          <a href={id_link.link} target="_blank">
                            {id_link.id}
                          </a>
                        </>
                      ))}
                    </div>
                    {pr.description}
                  </li>
                ))}
              </ul>
            </Accordion>
          </section>
        ),
    )
  }
</section>
